        <!-- Champ Adresse -->
        <TextField fx:id="address" promptText="Adresse" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="100" />

        <!-- Champ Téléphone -->
        <TextField fx:id="phone" promptText="Téléphone" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="150" />

        <!-- Champ Email -->
        <TextField fx:id="email" promptText="Email" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="200" />

        <!-- Image -->
        <ImageView fx:id="image" fitHeight="54.0" fitWidth="65.0" layoutX="58.0" layoutY="356.0" AnchorPane.leftAnchor="58.0" AnchorPane.topAnchor="356.0" />

