<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.easytripdesktopapp.controllers.Client.Travel.AfficherOfferTravelController">

    <!-- Barre de recherche et filtres -->
    <top>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 15;">
            <Label text="🔍 Rechercher une offre :" />
            <TextField fx:id="searchField" promptText="Nom de l'offre..." />

            <Label text="📌 Destination :" />
            <ComboBox fx:id="offerComboBox" prefWidth="180" />

            <Label text="🏢 Agence :" />
            <ComboBox fx:id="agenceComboBox" prefWidth="180" />

            <Label text="🎁 Promotion :" />
            <ComboBox fx:id="promotionComboBox" prefWidth="180" />

            <Label text="📅 Départ :" />
            <DatePicker fx:id="startDatePicker" />

            <Label text="📅 Arrivée :" />
            <DatePicker fx:id="endDatePicker" />

        </HBox>
    </top>

    <!-- Conteneur central avec ScrollPane et FlowPane -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-padding: 15;">
            <FlowPane fx:id="cardContainer" hgap="15" vgap="15" alignment="TOP_LEFT" />
        </ScrollPane>
    </center>
</BorderPane>
