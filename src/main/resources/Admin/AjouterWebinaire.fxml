<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>

<?import java.lang.String?>
<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.easytripdesktopapp.controllers.Admin.AjouterWebinaireController">
    <children>

        <VBox spacing="15" layoutX="50" layoutY="20">

            <Label text="Ajouter un Webinaire" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <TextField fx:id="title" promptText="Titre du webinaire" />
            <TextField fx:id="description" promptText="Description du webinaire" />
            <TextField fx:id="debutDateTime" promptText="Date et heure de début (yyyy-MM-dd HH:mm:ss)" />
            <TextField fx:id="finitDateTime" promptText="Date et heure de fin (yyyy-MM-dd HH:mm:ss)" />
            <TextField fx:id="link" promptText="Lien du webinaire" />

            <!-- ComboBox pour sélectionner l'hôtel par son nom -->
            <ComboBox fx:id="hotelComboBox" promptText="Sélectionner un hôtel" />

            <Button text="Ajouter" onAction="#save" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" />

        </VBox>
    </children>
</AnchorPane>