        <!-- Bouton "Sauvegarder" -->
        <Button layoutX="219.0" layoutY="403.0" onAction="#save" prefHeight="42.0" prefWidth="203.0" text="Sauvegarder" AnchorPane.bottomAnchor="24.600000000000023" AnchorPane.leftAnchor="219.0" AnchorPane.rightAnchor="79.39999999999998" />
    </children>
