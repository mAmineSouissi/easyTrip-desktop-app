    <modelVersion>4.0.0</modelVersion>

    <groupId>tn.esprit</groupId>
    <artifactId>easyTrip-desktop-app</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>easyTrip-desktop-app</name>

 <!--   <properties>
