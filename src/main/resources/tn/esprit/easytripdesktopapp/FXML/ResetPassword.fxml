<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="resetPasswordPane" stylesheets="@../styles/resetPassword.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.easytripdesktopapp.controllers.ResetPasswordController">
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50"
          AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        <Label text="Reset Password" styleClass="greeting-text"/>
        <Label text="Enter your email address to reset your password." styleClass="Label"/>
        <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field"/>
        <Button text="Send Reset Link" fx:id="sendButton" styleClass="button" onAction="#sendCode"/>
    </VBox>
</AnchorPane>