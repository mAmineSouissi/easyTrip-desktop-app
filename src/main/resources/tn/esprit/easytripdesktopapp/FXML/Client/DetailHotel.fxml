<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.easytripdesktopapp.controllers.Client.DetailHotel" spacing="10" alignment="CENTER"
      style="-fx-padding: 20;">
    <ImageView fx:id="hotelImage" fitWidth="300" fitHeight="200" preserveRatio="true"/>
    <Label fx:id="nameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="addressLabel"/>
    <Label fx:id="cityLabel"/>
    <Label fx:id="ratingLabel"/>
    <Label fx:id="priceLabel" style="-fx-text-fill: #4CAF50;"/>
    <Label fx:id="descriptionLabel" wrapText="true"/>
    <Label fx:id="typeRoomLabel"/>
    <Label fx:id="numRoomLabel"/>
    <Label fx:id="promotionLabel" style="-fx-text-fill: #FF5722;"/>

    <!-- Ajouter la note moyenne -->
    <Label fx:id="averageRatingLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <!-- Ajouter la distribution des étoiles -->
    <VBox fx:id="ratingDistributionBox" spacing="5" alignment="CENTER_LEFT"/>

    <Button fx:id="reserveButton" text="Réserver" onAction="#handleReserveButton"/>
    <Button fx:id="feedbackbutton" text="Soumettre Feedback" onAction="#handleFeedbackButton"/>
</VBox>