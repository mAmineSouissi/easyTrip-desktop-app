<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AffichageHotel">

    <!-- HBox pour les boutons Ajouter, Update, Delete -->
    <HBox spacing="20.0" layoutX="20.0" layoutY="20.0">
        <Button fx:id="addButton" text="Ajouter Hôtel" onAction="#goToAddHotel" prefHeight="40.0" prefWidth="100.0" />
        <Button fx:id="updateButton" text="Mettre à jour" onAction="#updateHotel" prefHeight="40.0" prefWidth="100.0" />
        <Button fx:id="deleteButton" text="Supprimer" onAction="#deleteHotel" prefHeight="40.0" prefWidth="100.0" />
    </HBox>

    <!-- Liste des hôtels -->
    <ListView fx:id="listViewHotels" layoutX="20.0" layoutY="80.0" prefHeight="340.0" prefWidth="560.0" />
</AnchorPane>