<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="541.0" prefWidth="600.0" stylesheets="@../styles/signup.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.easytripdesktopapp.controllers.SignUpController">

    <!-- Back Button with Icon -->
    <Button fx:id="backButton" onAction="#goBack" styleClass="back-button" text="&lt;" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10">

    </Button>

    <!-- Name Field -->
    <Label layoutX="49.0" layoutY="64.0" text="Name:" AnchorPane.leftAnchor="49.0" AnchorPane.topAnchor="64.0" />
    <TextField fx:id="nameField" layoutX="156.0" layoutY="58.0" prefHeight="30.0" prefWidth="136.0" AnchorPane.leftAnchor="156.0" AnchorPane.topAnchor="58.0" />

    <!-- Surname Field -->
    <Label layoutX="46.0" layoutY="109.0" text="Surname:" AnchorPane.leftAnchor="46.0" AnchorPane.topAnchor="109.0" />
    <TextField fx:id="surnameField" layoutX="156.0" layoutY="103.0" prefHeight="30.0" prefWidth="136.0" AnchorPane.leftAnchor="156.0" AnchorPane.topAnchor="103.0" />

    <!-- Password Field -->
    <Label layoutX="327.0" layoutY="64.0" text="Password:" AnchorPane.leftAnchor="327.0" AnchorPane.topAnchor="64.0" />
    <PasswordField fx:id="passwordField" layoutX="424.0" layoutY="58.0" prefHeight="30.0" prefWidth="136.0" AnchorPane.leftAnchor="424.0" AnchorPane.topAnchor="58.0" />

    <!-- Email Field -->
    <Label layoutX="329.0" layoutY="109.0" text="Email:" AnchorPane.leftAnchor="329.0" AnchorPane.topAnchor="109.0" />
    <TextField fx:id="emailField" layoutX="424.0" layoutY="103.0" prefHeight="30.0" prefWidth="136.0" AnchorPane.leftAnchor="424.0" AnchorPane.topAnchor="103.0" />

    <!-- Phone Field -->
    <Label layoutX="47.0" layoutY="197.0" text="Phone:" AnchorPane.leftAnchor="47.0" AnchorPane.topAnchor="197.0" />
    <TextField fx:id="phoneField" layoutX="156.0" layoutY="200.0" prefHeight="30.0" prefWidth="136.0" AnchorPane.leftAnchor="156.0" AnchorPane.topAnchor="200.0" />

    <!-- Address Field -->
    <Label layoutX="324.0" layoutY="206.0" text="Address:" AnchorPane.leftAnchor="324.0" AnchorPane.topAnchor="206.0" />
    <TextArea fx:id="addressField" layoutX="424.0" layoutY="185.0" prefHeight="60" prefWidth="136.0" AnchorPane.leftAnchor="424.0" AnchorPane.topAnchor="185.0" />

    <!-- Profile Photo Field -->
    <Label layoutX="46.0" layoutY="284.0" prefHeight="18.0" prefWidth="109.0" text="Profile Photo:" AnchorPane.leftAnchor="46.0" AnchorPane.topAnchor="284.0" />
    <ImageView fx:id="image" fitHeight="54.0" fitWidth="65.0" layoutX="451.0" layoutY="266.0" AnchorPane.leftAnchor="451.0" AnchorPane.topAnchor="266.0" />
    <Button layoutX="179.0" layoutY="277.0" onAction="#chooseImage" prefHeight="32.0" prefWidth="221.0" styleClass="profilePic-loader" text="Choose your Profile Picture" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="277.0" />

    <!-- Role ComboBox -->
    <Label layoutX="47.0" layoutY="333.0" text="Role:" AnchorPane.leftAnchor="47.0" AnchorPane.topAnchor="333.0" />
    <ComboBox fx:id="roleComboBox" layoutX="179.0" layoutY="333.0" promptText="Select Your Role" AnchorPane.leftAnchor="179.0" AnchorPane.topAnchor="333.0">
    </ComboBox>

    <!-- Sign Up Button -->
    <Button fx:id="signUpButton" layoutX="155.0" layoutY="425.0" onAction="#onClick" text="Sign Up" AnchorPane.leftAnchor="155.0" AnchorPane.topAnchor="425.0" />
    <Button layoutX="347.0" layoutY="425.0" mnemonicParsing="false" onAction="#reset" text="Reset" />

</AnchorPane>
