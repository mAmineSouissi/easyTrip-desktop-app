        <Label text="Liste des Agences" styleClass="title-label" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"/>

        <!-- ListView des agences -->
        <ListView fx:id="listViewAgences" AnchorPane.topAnchor="40" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="60" styleClass="list-view"/>

        <!-- Bouton Ajouter (reste visible mÃªme si la liste est vide) -->
