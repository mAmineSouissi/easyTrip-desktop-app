<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/login.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.easytripdesktopapp.controllers.LoginController">

    <Label fx:id="greetingLabel" styleClass="greeting-text" text="Hello to EasyTrip" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="30" />

    <Label text="Email:" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="100" />
    <TextField fx:id="emailField" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="100" />

    <Label text="Password:" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="150" />
    <PasswordField fx:id="passwordField" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="150" />

    <Button fx:id="loginButton" onAction="#handleLogin" text="Login" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="200" />

    <Button fx:id="signUpButton" layoutX="252.0" layoutY="200.0" onAction="#onClick" text="Signup" AnchorPane.leftAnchor="252.0" AnchorPane.topAnchor="200.0" />


</AnchorPane>
