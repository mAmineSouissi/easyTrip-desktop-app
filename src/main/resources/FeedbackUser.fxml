<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.FeedbackUser">
    <stylesheets>
        <URL value="@lightblue.css" />
    </stylesheets>
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <HBox prefHeight="31.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#backToHome" text="← Back to Home" translateX="10.0">
                     <font>
                        <Font size="10.0" />
                     </font>
                     <styleClass>
                        <String fx:value="navigation-button" />
                        <String fx:value="action-button" />
                     </styleClass>
                  </Button>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="My Feedbacks" translateX="90.0" translateY="10.0" wrappingWidth="119.3291015625">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
         </top>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="searchField" minWidth="-Infinity" onKeyReleased="#handleSearch" prefHeight="30.0" prefWidth="300.0" promptText="Search feedbacks..." translateX="2.0" translateY="2.0">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                     <VBox.margin>
                        <Insets bottom="10.0" left="60.0" right="160.0" />
                     </VBox.margin>
                  </TextField>
                  <ListView fx:id="feedbackList" prefHeight="70.0" prefWidth="571.0" translateX="2.0" translateY="2.0">
                     <VBox.margin>
                        <Insets left="30.0" right="30.0" />
                     </VBox.margin>
                  </ListView>
               </children>
            </VBox>
         </center>
         <bottom>
            <VBox prefHeight="253.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Submit New Feedback" translateX="10.0" translateY="10.0">
                     <font>
                        <Font name="System Bold Italic" size="14.0" />
                     </font>
                  </Text>
                  <GridPane hgap="15.0" prefHeight="129.0" prefWidth="400.0" vgap="15.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <VBox.margin>
                        <Insets left="100.0" right="100.0" top="30.0" />
                     </VBox.margin>
                     <children>
                        <Label text="Offer Id" />
                        <Label text="Rating" GridPane.rowIndex="1" />
                        <Label text="Message" GridPane.rowIndex="2" />
                        <Label text="Date" GridPane.rowIndex="3" />
                        <TextField fx:id="offerIdField" promptText="Offer ID" GridPane.columnIndex="1" />
                        <Spinner fx:id="ratingSpinner" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <TextField fx:id="messageField" promptText="message" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
                  <HBox prefHeight="75.0" prefWidth="600.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#insertFeedback" styleClass="action-button" text="ADD">
                           <HBox.margin>
                              <Insets left="50.0" top="30.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#updateFeedback" styleClass="action-button" text="UPDATE">
                           <HBox.margin>
                              <Insets left="110.0" top="30.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#deleteFeedback" styleClass="action-button-danger" text="DELETE" textFill="#1e14c7">
                           <HBox.margin>
                              <Insets left="100.0" top="30.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </children>

</AnchorPane>
