<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.easytripdesktopapp.controllers.Agence.afficher_agence"
            stylesheets="@styles/css_af_ag.css">

    <top>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Rechercher par nom d'agence:"/>
            <TextField fx:id="searchField" promptText="Nom d'agence..." />
            <Button text="Rechercher" onAction="#handleSearch" />
            <Label text="Filtrer par agences:"/>
            <VBox fx:id="checkboxContainer" spacing="5" alignment="TOP_LEFT" />
            <Button text="Ajouter Agence" onAction="#openAddAgence" />
        </HBox>
    </top>

    <center>
        <ScrollPane>
            <FlowPane fx:id="cardContainer" hgap="10" vgap="10" alignment="TOP_LEFT" />
        </ScrollPane>
    </center>
</BorderPane>
