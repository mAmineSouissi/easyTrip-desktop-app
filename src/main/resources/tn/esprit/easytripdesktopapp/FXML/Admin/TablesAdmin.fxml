<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@../../styles/AdminTables.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.easytripdesktopapp.controllers.Admin.TablesAdminController">

    <VBox layoutX="20.0" layoutY="72.0" spacing="20" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="72.0">
      <HBox prefHeight="68.0" prefWidth="960.0">
         <children>
             <ImageView fx:id="image" fitHeight="54.0" fitWidth="65.0" layoutX="156.0" layoutY="249.0" AnchorPane.leftAnchor="156.0" AnchorPane.topAnchor="249.0" />

              <!-- Title -->
              <Label styleClass="dashboard-title" text="Users List" />

              <!-- LogOut Button -->
              <Button onAction="#handleLogOut" styleClass="logout-button" text="Log Out">
               <HBox.margin>
                  <Insets left="600.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>

        <!-- ListView -->
        <ListView fx:id="userListView" VBox.vgrow="ALWAYS" />

    </VBox>

</AnchorPane>
