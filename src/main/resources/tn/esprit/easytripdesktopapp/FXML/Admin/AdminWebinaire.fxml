<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.easytripdesktopapp.controllers.Admin.AdminWebinaireController" stylesheets="@../../styles/styles8.css" prefWidth="1000" prefHeight="700">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Top Section: Title and Search Bar -->
    <top>
        <VBox spacing="20" alignment="CENTER">
            <Label text="Gestion des Webinaires" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font name="Arial" size="24"/>
                </font>
            </Label>
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Rechercher par titre" style="-fx-pref-width: 300px; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;"/>

            </HBox>
        </VBox>
    </top>

    <!-- Center Section: Webinaire List -->
    <center>
        <VBox spacing="20" alignment="CENTER">
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="addButton" text="Ajouter Webinaire" onAction="#goToAddWebinaire" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;"/>
                <Button fx:id="refreshButton" text="Rafraîchir" onAction="#refreshPage" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;"/>
                <Button fx:id="backButton" text="Retour à l'accueil" onAction="#goToAccueil" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </HBox>
            <ListView fx:id="webinaireList" style="-fx-pref-width: 800px; -fx-pref-height: 500px; -fx-background-color: transparent;"/>
        </VBox>
    </center>
</BorderPane>