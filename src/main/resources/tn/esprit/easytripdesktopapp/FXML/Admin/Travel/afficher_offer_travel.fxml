<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.easytripdesktopapp.controllers.Agent.Travel.AfficherOfferTravelController">

    <!-- ✅ Conteneur principal -->
    <VBox spacing="10" layoutX="10" layoutY="10" prefWidth="800" prefHeight="600">

        <!-- ✅ Bouton pour ajouter une offre -->
        <Button fx:id="btnAddTravel"
                text="Ajouter une offre"
                onAction="#openAddtravel"
                style="-fx-font-size: 14px; -fx-padding: 10px;"
        />

        <!-- ✅ ScrollPane pour défiler si trop d'offres -->
        <ScrollPane fitToWidth="true" prefHeight="550">
            <content>
                <!-- ✅ FlowPane pour afficher les offres en grille -->
                <FlowPane fx:id="cardContainer"
                          hgap="15" vgap="15"
                          style="-fx-padding: 20;"
                />
            </content>
        </ScrollPane>

    </VBox>

</AnchorPane>
