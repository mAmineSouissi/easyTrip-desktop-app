<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane stylesheets="@../styles/signup.css" prefHeight="541.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.easytripdesktopapp.controllers.SignUpController">

    <!-- Back Button with Icon -->
    <Button fx:id="backButton" onAction="#goBack" text="Back" styleClass="back-button"  AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10">

    </Button>

    <!-- Name Field -->
    <Label text="Name:" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="50" />
    <TextField fx:id="nameField" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="50" />

    <!-- Surname Field -->
    <Label text="Surname:" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="100" />
    <TextField fx:id="surnameField" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="100" />

    <!-- Password Field -->
    <Label text="Password:" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="150" />
    <PasswordField fx:id="passwordField" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="150" />

    <!-- Email Field -->
    <Label text="Email:" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="200" />
    <TextField fx:id="emailField" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="200" />

    <!-- Phone Field -->
    <Label text="Phone:" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="250" />
    <TextField fx:id="phoneField" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="250" />

    <!-- Address Field -->
    <Label text="Address:" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="300" />
    <TextArea fx:id="addressField" prefHeight="60" prefWidth="200" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="300" />

    <!-- Profile Photo Field -->
    <Label text="Profile Photo:" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="370" />
    <TextField fx:id="profilePhotoField" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="370" />

    <!-- Role ComboBox -->
    <Label text="Role:" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="420" />
    <ComboBox fx:id="roleComboBox" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="420">
    </ComboBox>

    <!-- Sign Up Button -->
    <Button fx:id="signUpButton" onAction="#onClick" text="Sign Up" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="470" />
    <Button layoutX="236.0" layoutY="470.0" mnemonicParsing="false" onAction="#reset" text="Reset" />

</AnchorPane>
