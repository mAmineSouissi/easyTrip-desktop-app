<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.FlowPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.easytripdesktopapp.controllers.Agent.AfficherOfferTravelController">


    <!-- Barre de recherche en haut -->
    <top>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Rechercher une offre:"/>
            <TextField fx:id="searchField" promptText="Nom de l'offre..." />
            <Button text="Rechercher" onAction="#handleSearch" />

            <Label text="Filtrer par offre:"/>
            <ComboBox fx:id="offerComboBox" prefWidth="200" onAction="#filterOffers"/>

            <Button text="Ajouter Offre" onAction="#openAddOffer" />
        </HBox>
    </top>

    <!-- Conteneur central avec ScrollPane et FlowPane -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <FlowPane fx:id="cardContainer" hgap="10" vgap="10" alignment="TOP_LEFT" />
        </ScrollPane>
    </center>
</BorderPane>
