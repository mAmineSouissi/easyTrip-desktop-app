<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="890.0" prefWidth="1315.0"
            stylesheets="@../../styles/StyleTransport.css" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="tn.esprit.easytripdesktopapp.controllers.Admin.AddCar">
    <children>
        <VBox alignment="CENTER" layoutX="496.0" layoutY="212.0" prefHeight="407.0" prefWidth="387.0"
              stylesheets="@../../styles/StyleTransport.css">
            <children>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="347.0" styleClass="header-box"
                      stylesheets="@../../styles/StyleTransport.css">
                    <children>
                        <Label alignment="TOP_LEFT" prefHeight="20.0" prefWidth="233.0" stylesheets="@../../styles/StyleTransport.css"
                               text="Ajouter Un Moyen De Transport" styleClass="header-label">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" styleClass="input-box">
                    <children>
                        <Label prefWidth="70.0" text="Model:" styleClass="input-label"/>
                        <TextField fx:id="model" prefHeight="35.0" prefWidth="200.0" promptText="Model"
                                   styleClass="input-field"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" styleClass="input-box">
                    <children>
                        <Label prefWidth="70.0" text="Seats:" styleClass="input-label"/>
                        <TextField fx:id="seats" prefHeight="35.0" prefWidth="200.0" promptText="Nombre de places"
                                   styleClass="input-field"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" styleClass="input-box">
                    <children>
                        <Label prefWidth="70.0" text="Location:" styleClass="input-label"/>
                        <TextField fx:id="carLocation" prefHeight="35.0" prefWidth="200.0" promptText="Localisation"
                                   styleClass="input-field"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" styleClass="input-box">
                    <children>
                        <Label prefWidth="70.0" text="Price:" styleClass="input-label"/>
                        <TextField fx:id="price" prefHeight="35.0" prefWidth="200.0" promptText="Prix par jour"
                                   styleClass="input-field"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" styleClass="input-box">
                    <children>
                        <Button mnemonicParsing="false" onAction="#upload_img" prefWidth="70.0" text="Image"
                                styleClass="upload-button"/>
                        <TextField fx:id="image" prefHeight="35.0" prefWidth="130.0" promptText="URL de l'image"
                                   styleClass="input-field"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0" styleClass="button-box">
                    <children>
                        <Button mnemonicParsing="false" onAction="#save" text="Ajouter" styleClass="action-button"/>
                        <Button mnemonicParsing="false" onAction="#show" text="Afficher" styleClass="action-button"/>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </HBox>
            </children>
            <styleClass>
                <String fx:value="form-container"/>
                <String fx:value="shadow"/>
            </styleClass>
        </VBox>
    </children>
</AnchorPane>