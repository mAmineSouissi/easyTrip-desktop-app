<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controller.Home"
            prefHeight="500.0" prefWidth="700.0">
   <stylesheets>
      <URL value="@lightblue.css" />
   </stylesheets>

   <VBox alignment="CENTER" spacing="30" styleClass="form-container"
         AnchorPane.topAnchor="50.0"
         AnchorPane.bottomAnchor="50.0"
         AnchorPane.leftAnchor="100.0"
         AnchorPane.rightAnchor="100.0">
      <padding>
         <Insets top="40" right="40" bottom="40" left="40"/>
      </padding>

      <Text text="Bienvenue dans EasyTrip" styleClass="title"/>

      <HBox spacing="40" alignment="CENTER">
         <VBox spacing="20" alignment="CENTER" maxWidth="300">
            <Text text="Utilisateur" styleClass="section-header"/>
            <Button text="Mes Feedbacks" onAction="#navigateToUserFeedback" styleClass="navigation-button"/>
            <Button text="Mes Reclamations" onAction="#navigateToUserReclamation" styleClass="navigation-button"/>
         </VBox>

         <VBox spacing="20" alignment="CENTER" maxWidth="300">
            <Text text="Admin" styleClass="section-header"/>
            <Button text="Gerer Feedbacks" onAction="#navigateToAdminFeedback" styleClass="navigation-button"/>
            <Button text="Gerer Reclamations" onAction="#navigateToAdminReclamation" styleClass="navigation-button"/>
         </VBox>
      </HBox>
   </VBox>

</AnchorPane>
